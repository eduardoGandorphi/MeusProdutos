<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Produtos.View.CadastraProdutoPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tbiSalvar" Text="Salvar" Clicked="TbiSalvar_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>    
    <ContentPage.Content>
        <TableView>
            <TableRoot Title="Produto">
                <TableSection >
                    <TextCell x:Name="tcTexto" Text="Tela de cadastro de Produto"></TextCell>
                    <EntryCell x:Name="ecDescricao"></EntryCell>
                    <EntryCell x:Name="ecPreco"></EntryCell>
                    <SwitchCell x:Name="scAtivo" On="True"></SwitchCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>